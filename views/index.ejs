            <li>
              <div
                class="flex items-center w-fit m my-2 px-2 py-1 rounded hover:bg-purple-50"
              >
                <input
                  id="todo-checkbox-1"
                  class="text-blue-600 rounded w-4 h-4 bg-gray-100 border border-gray-200 cursor-pointer"
                  type="checkbox"
                />
                <label for="todo-checkbox-1" class="ml-2 text-sm cursor-pointer"
                  >Pay Electricity Bill</label
                >
              </div>
            </li>
